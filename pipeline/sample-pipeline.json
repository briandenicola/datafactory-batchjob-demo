{
	"name": "sample-pipeline",
	"properties": {
		"activities": [
			{
				"name": "Push to Service Bus",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://bjdsb-f81dfea.servicebus.windows.net/batchjob/messages",
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"method": "POST",
					"headers": {
						"Content-Type": "application/json",
						"BrokerProperties": "@concat('{\"CorrelationId\": \"',pipeline().RunId,'\"}')"
					},
					"body": {
						"value": "{\n  \"message\": {\n      \"file\": @parameters('fileFQDN')\n  }\n}",
						"type": "Expression"
					},
					"authentication": {
						"resource": "https://servicebus.azure.net",
						"credential": {
							"referenceName": "bjddf-f81dfea-identity",
							"type": "CredentialReference"
						}
					}
				}
			}
		],
		"parameters": {
			"folderPath": {
				"type": "string",
				"defaultValue": "@concat(triggerBody().folderPath, \"/\",  triggerBody().fileName)"
			}
		},
		"annotations": []
	}
}